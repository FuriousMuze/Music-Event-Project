<div class="form">
<h1>Create a new event!</h1>

<%= form_for @event do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_field :body %>
    </div>

    <div>
        <%= f.label :date_time %>
        <%= f.text_field :date_time %>
    </div>

    <div>
        <%= f.label :venue %>
        <%= f.text_field :venue %>
    </div>

    <%= f.submit "Add this event!" %>

<% end %>

<%= link_to "Back to the list!", events_index_path %>
</div>