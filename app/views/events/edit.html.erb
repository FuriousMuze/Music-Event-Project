<h1>Edit this event!</h1>

<%= form_for @event do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :date_time %>
        <%= f.text_field :date_time %>
    </div>
    
    <div>
        <%= f.label :body %>
        <%= f.text_field :body %>
    </div>

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the list!", events_path %>